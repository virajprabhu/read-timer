{
  "manifest_version": 2,
  "name": "Read Timer",
  "description": "Find out how long it will take you to read an article online.",
  "version": "1.0",
  "options_page": "options.html",
  "background": {
      "scripts": ["background.js"],
      "persistent": true
  },
  "browser_action": {
    "default_title": "Read Timer",
    "default_icon": "hourglass.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "background",
    "storage"
  ]
}