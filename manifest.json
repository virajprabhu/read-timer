{
    "manifest_version": 2,
    "name": "Read Timer",
    "description": "Read timer learns your read speed and tells you how long it will take to read an article online.",
    "version": "1.0.1",
    "author": "Viraj Prabhu & Parameswaran D",
    "options_page": "options.html",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Read Timer",
        "default_icon": "hourglass.png",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "resources/arrow-down.gif",
        "resources/arrow-left.gif",
        "resources/arrow-right.gif",
        "resources/arrow-up.gif",
        "resources/back_button.png",
        "resources/gear.png"
        ],
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "background",
        "storage"
    ]
}